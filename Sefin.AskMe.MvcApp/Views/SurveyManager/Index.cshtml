@model SurveyListModel

@{
    ViewBag.Title = "Survey";

}

<h1>Survey management</h1>


<form  method="get" action="~/SurveyManager/" >
    
    @Html.TextBoxFor(m => m.Search, new { @class = "form-control" })

    @*@Html.TextBox("search", Model.Search, new { @class="form-control" } )*@

    @*<input type="text" name="search" value="@Model.Search" class="form-control" />*@

    <button type="submit" class="btn btn-primary" >
        Search
    </button>

</form>

<hr />


<table class="table table-bordered table-condensed table-striped table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Active</th>
        <th>Questions</th>
        <th></th>
    </tr>

    @foreach (var survey in Model.Surveys)
    {
        <tr>
            <td>@survey.Id</td>
            <td>
                @*<a href="~/SurveyManager/Edit/@survey.Id">
                    @survey.Name
                </a>*@

                @Html.ActionLink(survey.Name,"Edit", new { id = survey.Id })
            </td>
            <td>
                @if (survey.Active)
                {
                    <span class="glyphicon glyphicon-check"></span>
                }
                else
                {
                    <span class="glyphicon glyphicon-unchecked"></span>
                }
            </td>

            <td>@survey.NumberOfQuestions</td>
            <td></td>
        </tr>
    }

</table>


